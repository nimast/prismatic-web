{
  "private": true,
  "scripts": {
    "build": "parcel build source/manifest.json --no-content-hash --no-source-maps --dist-dir distribution --no-cache --detailed-report 0",
    "lint": "run-p lint:*",
    "lint-fix": "run-p 'lint:* -- --fix'",
    "lint:css": "stylelint source/**/*.css",
    "lint:js": "xo",
    "test": "run-p build",
    "watch": "parcel watch source/manifest.json --dist-dir distribution --no-cache --no-hmr"
  },
  "browserslist": [
    "last 1 Chrome version",
    "last 1 Firefox version"
  ],
  "xo": {
    "envs": [
      "browser"
    ],
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "browser"
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-xo"
  },
  "dependencies": {
    "element-ready": "^6.2.0",
    "html2canvas": "^1.4.1",
    "select-dom": "^7.1.1",
    "webext-options-sync": "^2.0.1",
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.8.3",
    "@parcel/transformer-image": "^2.0.0-rc.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.8.3",
    "stylelint": "^13.13.1",
    "stylelint-config-xo": "^0.20.0",
    "xo": "^0.44.0"
  },
  "webExt": {
    "sourceDir": "distribution",
    "run": {
      "startUrl": [
        "https://docs.google.com/document/d/16yEI7LgziHaz0IippuHb6J4ZcJI63yyTWBzOBer5lfw/edit?usp=sharing"
      ]
    }
  }
}
